%h3 Billing Information
=form_tag @touchnet_url, id: "checkout_form", method: "post" do
  .form-group.row
    =hidden_field :UPAY_SITE_ID, value = @site_id
    =hidden_field :AMT, value = @total
    =hidden_field :cart, value = @encoded_cart
  .form-group.row
    =label :BILL_NAME, "Full name", :class => "col-sm-2 col-form-label"
    .col-sm-10
      =text_field :BILL_NAME, nil, :class => "form-control"

  .form-group.row
    =label :BILL_EMAIL_ADDRESS, "Email Address", :class => "col-sm-2 col-form-label"
    .col-sm-10
      =text_field :BILL_EMAIL_ADDRESS, nil, :class => "form-control"

  .form-group.row
    =label :BILL_STREET1, "Street Address 1", :class => "col-sm-2 col-form-label"
    .col-sm-10
      =text_field :BILL_STREET1, nil, :class => "form-control"

  .form-group.row
    =label :BILL_STREET2, "Street Address 2", :class => "col-sm-2 col-form-label"
    .col-sm-10
      =text_field :BILL_STREET2, nil, :class => "form-control"

  .form-group.row
    =label :BILL_CITY, "City", :class => "col-sm-2 col-form-label"
    .col-sm-10
      =text_field :BILL_CITY, nil, :class => "form-control"

  .form-group.row
    =label :BILL_STATE, "State", :class => "col-sm-2 col-form-label"
    .col-sm-10
      =select_tag :BILL_STATE, options_for_select(["AL", "AK", "AZ", "AR", "CA", "CO", "CT", "DE", "FL", "GA", "HI", "ID", "IL", "IN", "IA", "KS", "KY", "LA", "ME", "MD", "MA", "MI", "MN", "MS", "MO", "NE", "NV", "NH", "NJ", "NM", "NY", "NC", "ND", "OH", "OK", "OR", "PA", "RI", "SC", "TN", "TX", "UT", "VT", "VA", "WA", "WV", "WI", "WY"], "NY"), :class => "form-control"

  .form-group.row
    =label :BILL_POSTAL_CODE, "Postal Code", :class => "col-sm-2 col-form-label"
    .col-sm-10
      =number_field :BILL_POSTAL_CODE, nil, :class => "form-control"
  %p
  .row
    .col-sm-2
      %div Amount:
    .col-sm-10
      %div #{@total}
  %p
  .row
    .col-sm-2
      =label :anon, "Anonymous donation?"
    .col-sm-2
      =check_box_tag :anon, :class => "form-check-input"
    .col-sm-8
      .text-muted Selecting anonymous means that your name will not appear on our main donate feed. We still need the information above to proceed with payment
  %p
  .row
    .col-sm-4
      =submit_tag "Proceed to payment", :class => "btn btn-primary mb-4"
    .col-sm-8
  %p
  .row
    .col-sm-4
      =link_to "Back to summary", :back, :class => "btn btn-light mb-4"
    .col-sm-8
  .row
    .col-sm-4
      =link_to "Back to main page", root_path, :class => "btn btn-light mb-4"
    .col-sm-8