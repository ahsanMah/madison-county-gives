.row
    .col-md-offset-1
    .col-md-4
        %h3.header.title= "#{@organization.name}"
    .col-md-offset-1
    .col-md-offset-4
        %td.image= image_tag @organization.image.url(:medium)

.row
    .col-md-offset-2
    .col-md-8.description= "#{@organization.description}"
%br
%br

- if @organization.id == current_user.organization.id
    .row
        .col-md-offset-1
        .col-md-2= link_to('Edit organization details', edit_organization_path(@organization))
        .col-md-2= link_to('Back to organization list', organization_path)

.row
    %h4 Campaigns
.row
    %table.table
        %thead
            %tr
                %th Name
                %th Start Date
                %th Goal
                %th Active?
                - if user_signed_in? && @organization.id == current_user.organization.id
                    %th
                    %th
                    %th
        %tbody
            -@organization.campaigns.each do |c|
                %tr.campaign
                    %td= c.name
                    %td= c.start_date
                    %td= c.goal
                    %td= c.is_active
                    - if user_signed_in? && @organization.id == current_user.organization.id
                        %td= link_to "Edit", edit_organization_path
                        %td= link_to "Delete", organization_path(@organization), :method => :delete
                        - if !c.campaign_change.nil?
                            %td= link_to "Pending Change", organization_path
