%h3.header New Organization Registration

=form_for @organization, :multipart => true, :method => :post do |f|
  .field
    =f.label :name, "Organization Name"
    =f.text_field :name

  .field
    =f.label :description, "Description"
    =f.text_field :description

  .field
    =f.label :primary_contact, "Contact Name"
    =f.text_field :primary_contact

  .field
    =f.label :address, "Address"
    =f.text_field :address

  .field
    =f.label :email, "Email Address"
    =f.text_field :email

  .field
    =f.label :image, "Image"
    =f.file_field :image, accept: "image/png,image/gif,image/jpeg"

  -@organization.short_responses.each do |response|
    .field
      =f.label :question, "#{response.short_question.question}"
      =f.text_area :short_responses, :value => "#{response.response}", size:"100x5"

  .field
    =f.submit "Submit organization registration"
