#main.container
    .row
        .col-md-offset-1
        .col-md-4
            %h3.header.title= "#{@campaign.name}"
        .col-md-offset-1
        .col-md-offset-4
            %td.image= image_tag @campaign.image.url(:medium)
    .row
        .col-md-offset-2
        .col-md-8.description= "#{@campaign.description}"
    %br
    %br

    .row
        -if user_signed_in? && current_user.organization.id == @campaign.organization_id
            .col-md-offset-1
            .col-md-2= link_to('Edit campaign details',  new_campaign_change_path(:campaign_id => @campaign.id, :campaign_action => "UPDATE"))
            .col-md-2= link_to('Delete campaign',  new_campaign_change_path(:campaign_id => @campaign.id, :campaign_action => "DELETE"))
        .col-md-2= link_to('Back to campaign list', campaigns_path)
