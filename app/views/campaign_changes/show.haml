#main.container
    .row
        .col-md-offset-1
        .col-md-4
            %h3.header.title= "#{@campaign.name}"
        .col-md-offset-1
        .col-md-offset-4
            %td.image= image_tag @campaign.image.url(:medium)

    .row
        .col-md-offset-2
        .col-md-8.description= "#{@campaign.description}"
    %br
    %br

    .row
        .col-md-offset-1
        .col-md-2= link_to('Edit campaign details', edit_campaign_change_path(@campaign))
        .col-md-2= "Delete campaign"
        .col-md-2= link_to('Back to campaign list', campaigns_path)
